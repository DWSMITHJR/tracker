            Description = "Incident #INC-1234 resolved", 
            Type = "Incident", 
            Timestamp = DateTime.Now.AddDays(-2), 
            User = "David Brown" 
        }
    };
    
    private List<IncidentItem> recentIncidents = new()
    {
        new IncidentItem { 
            Id = "INC-1234", 
            Title = "Server Outage - Main Database", 
            Status = "Resolved", 
            Severity = "High", 
            ReportedDate = DateTime.Now.AddDays(-2), 
            ReportedBy = "John Smith" 
        },
        new IncidentItem { 
            Id = "INC-1233", 
            Title = "Application Performance Degradation", 
            Status = "In Progress", 
            Severity = "Medium", 
            ReportedDate = DateTime.Now.AddDays(-1), 
            ReportedBy = "Sarah Johnson" 
        },
        new IncidentItem { 
            Id = "INC-1232", 
            Title = "User Authentication Failure", 
            Status = "In Progress", 
            Severity = "High", 
            ReportedDate = DateTime.Now.AddDays(-1), 
            ReportedBy = "Mike Wilson" 
        },
        new IncidentItem { 
            Id = "INC-1231", 
            Title = "Scheduled Maintenance Notification", 
            Status = "Scheduled", 
            Severity = "Low", 
            ReportedDate = DateTime.Now.AddDays(-3), 
            ReportedBy = "Emily Davis" 
        },
        new IncidentItem { 
            Id = "INC-1230", 
            Title = "Email Delivery Delays", 
            Status = "Resolved", 
            Severity = "Medium", 
            ReportedDate = DateTime.Now.AddDays(-4), 
            ReportedBy = "David Brown" 
        }
    };
    
    protected override async Task OnInitializedAsync()
    {
        try
        {
            // In a real app, you would get the user's name from the authentication state
            // For now, we'll use a placeholder
            userName = "John";
            
            // In a real app, you would fetch this data from your API
            // Uncomment and implement these when services are available
            /*
            var activitiesTask = SomeService.GetRecentActivitiesAsync();
            var incidentsTask = SomeService.GetRecentIncidentsAsync();
            
            await Task.WhenAll(activitiesTask, incidentsTask);
            
            recentActivities = await activitiesTask;
            recentIncidents = await incidentsTask;
            */
            
            // For now, we'll just simulate a small delay to make the async/await meaningful
            await Task.Delay(1);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading dashboard data");
        }
    }
    
    private string GetStatusColor(string status)
    {
        return status switch
        {
            "Open" => "bg-red-100 text-red-800",
            "In Progress" => "bg-yellow-100 text-yellow-800",
            "Resolved" => "bg-green-100 text-green-800",
            "Closed" => "bg-gray-100 text-gray-800",
            "Scheduled" => "bg-blue-100 text-blue-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }
    
    private string GetSeverityColor(string severity)
    {
        return severity switch
        {
            "Critical" => "bg-red-100 text-red-800",
            "High" => "bg-orange-100 text-orange-800",
            "Medium" => "bg-yellow-100 text-yellow-800",
            "Low" => "bg-green-100 text-green-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }
    
    private void NavigateToNewIncident()
    {
        NavigationManager.NavigateTo("/incidents/new");
    }
    
    private class ActivityItem
    {
        public string Description { get; set; } = string.Empty;
        public string Type { get; set; } = string.Empty;
        public DateTime Timestamp { get; set; } = DateTime.UtcNow;
        public string User { get; set; } = string.Empty;
    }
    
    private class IncidentItem
    {
        public string Id { get; set; } = string.Empty;
        public string Title { get; set; } = string.Empty;
        public string Status { get; set; } = "Open";
        public string Severity { get; set; } = "Medium";
        public DateTime ReportedDate { get; set; } = DateTime.UtcNow;
        public string ReportedBy { get; set; } = string.Empty;
    }
}
