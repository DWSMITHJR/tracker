        },
        new ActivityItem { 
            Description = "New individual added to the system", 
            Type = "Individual", 
            Timestamp = DateTime.Now.AddHours(-2), 
            User = "Sarah Johnson" 
        },
        new ActivityItem { 
            Description = "Contact information updated for Acme Corp", 
            Type = "Contact", 
