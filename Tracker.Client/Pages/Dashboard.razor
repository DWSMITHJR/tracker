    private string userName = "";
    
    private List<ActivityItem> recentActivities = new()
    {
        new ActivityItem { 
            Description = "New incident reported: Server Outage", 
            Type = "Incident", 
            Timestamp = DateTime.Now.AddMinutes(-15), 
